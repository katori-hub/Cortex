{
  "manifest_version": 3,
  "name": "Cortex",
  "description": "Save links, tweets, and Reddit posts to Cortex â€” your personal knowledge agent.",
  "version": "0.1.0",

  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging"
  ],

  "host_permissions": [
    "*://twitter.com/*",
    "*://x.com/*",
    "*://www.reddit.com/*",
    "*://reddit.com/*",
    "*://www.youtube.com/*",
    "*://youtu.be/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Save to Cortex"
  },

  "content_scripts": [
    {
      "matches": [
        "*://twitter.com/*",
        "*://x.com/*",
        "*://www.reddit.com/*",
        "*://reddit.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
